<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 
#ConfigSection
데이터베이스에 질의할 구문을 작성하는곳
 -->

<mapper namespace="installs">
	
	<insert id="insertAuthRequest" parameterType="map">
		INSERT INTO InstallRequest
			(ip_address, mac_address, work_group, host_name, request_time)
			VALUES
			(#{ip},#{mac},#{work_group}, #{host_name}, #{request_time})		
	</insert>
	
	<select id="getAuthStatus" parameterType="map" resultType="map">
		SELECT is_allowed from InstallRequest
			where
			request_time = #{request_time}
			and ip_address=#{ip}
			and mac_address = #{mac}
			and work_group = #{work_group}
			and host_name = #{host_name}	
	</select>
</mapper>


