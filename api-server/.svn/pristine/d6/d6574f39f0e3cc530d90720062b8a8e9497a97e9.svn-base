<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 
#ConfigSection
데이터베이스에 질의할 구문을 작성하는곳
 -->

<mapper namespace="notices">
	<select id="noticeList" resultType= "map">
		select top(5) title, writernm, CONVERT(date, regymd, 112) as regymd, hit 
		from HNEWMaster order by DocID desc
	</select>
</mapper>


